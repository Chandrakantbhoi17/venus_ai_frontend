# Use official Node image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the app
COPY . .

# Build the Vite app
RUN npm run dev

# Expose the Vite preview port
EXPOSE 4173

# Start the Vite preview server
CMD ["npm", "run", "dev"]
